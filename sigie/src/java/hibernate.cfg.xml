<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sigie?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="modelo/Estudiante.hbm.xml"/>
    <mapping resource="modelo/Personal.hbm.xml"/>
    <mapping resource="modelo/Usuario.hbm.xml"/>
    <mapping resource="modelo/Titulo.hbm.xml"/>
    <mapping resource="modelo/ConvenioPagos.hbm.xml"/>
    <mapping resource="modelo/AreaCurricular.hbm.xml"/>
    <mapping resource="modelo/Notas.hbm.xml"/>
    <mapping resource="modelo/Encargado.hbm.xml"/>
    <mapping resource="modelo/Reglamento.hbm.xml"/>
    <mapping resource="modelo/DatoProfesion.hbm.xml"/>
    <mapping resource="modelo/TelefonoPersonal.hbm.xml"/>
    <mapping resource="modelo/InfoDocente.hbm.xml"/>
    <mapping resource="modelo/TelefonoEncargado.hbm.xml"/>
    <mapping resource="modelo/Grado.hbm.xml"/>
    <mapping resource="modelo/FichaInscripcion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
